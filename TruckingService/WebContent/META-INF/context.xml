<?xml version="1.0" encoding="UTF-8"?>
<Context>
  <!-- Specify a JDBC datasource -->
  <Resource name="jdbc/truckingDB"
            auth="Container"
            description="DB Connection"
            type="javax.sql.DataSource"
            driverClassName="com.mysql.jdbc.Driver"
            url="jdbc:mysql://localhost:3306/trucking?autoReconnect=true"
            username="root"
            password="root"
            validationQuery="select 1"
            maxActive="100"
            maxIdle="30"
            minIdle="5"
            maxWait="5000"/>
</Context>
